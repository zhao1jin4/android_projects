<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="defaultStyle">
        <item name="android:textColor">#00ff00</item>
    </style>
    <style name="largeStyle"  parent="@style/defaultStyle"><!-- 可以继承 -->
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="smallStyle" parent="@style/defaultStyle">
        <item name="android:textColor">#00ffff</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="myTheme">
        <item name="android:textColor">#00ffff</item>
        <item name="android:solidColor">#00ff00</item>
        <item name="android:shadowColor">?android:textColor</item><!-- ?表示引用其它的值 -->
    </style>
</resources>